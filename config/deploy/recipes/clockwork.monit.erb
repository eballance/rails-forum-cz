check process clockwork.<%= user %> with pidfile <%= current_path %>/tmp/pids/clockworkd.<%= user %>.pid
  start program = "<%= shared_path %>/bin/clockworkctl start" with timeout 90 seconds
  stop program  = "<%= shared_path %>/bin/clockworkctl stop"
  if totalmem is greater than 750 MB for 2 cycles then restart
  if changed pid 2 times within 5 cycles then alert
